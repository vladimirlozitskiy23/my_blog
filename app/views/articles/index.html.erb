<div class="container">
  <%= search_form_for  @q  do |f| %>
    <div id="search" class="form-group">
        <%= f.search_field :title_or_body_cont_any %>  
        <%= f.submit 'Search', class: "btn btn-outline-secondary" %>
    </div>   
  <% end %>
  <br/>

 

  

  <div class="row">
    <div class="col-10">
        <% @articles.each do |article|%>
        
          <div class="row"> 
            <div class="col-12">
              <div id="border_x" class="border border-success p-2 border-opacity-25 rounded">
                <p>
                    <%= link_to article.title, article_path(article), style: 'color:#d63e2d; font-size: 40px; ' %> 
                </p>

                <p>
                    <%= markdown article.body%>
                </p>

              </div>
            </div>
          </div>
          <br/>
       
        <%end%>
    </div>  
        <div class="col-2">
           <div id="border_y" class="border border-success p-2 border-opacity-25 rounded">
             <% @articles.each do |article|%>
                <p> 
                  <%= link_to article.title, article_path(article), style: 'color:#000000;' %>
               </p>
             <% end %>
           </div>
        </div>
    
  </div>
</div>