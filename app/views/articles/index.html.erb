<div class="container">
  <%# <h1>Articles:</h1> %>
  <%= search_form_for  @q  do |f| %>
<div id="search" class="form-group">
    <%= f.search_field :title_or_body_cont_any %>  
    <%= f.submit 'Search', class: "btn btn-outline-secondary" %>
 </div>   
  <% end %>
  <br/>
  <% @articles.each do |article|%>
  <div class="border border-success p-2 border-opacity-25 rounded">
    <p>
        <%= link_to article.title, article_path(article), style: 'color:#d63e2d; font-size: 40px; ' %> 
        
    </p>

    <p>
        <%= markdown article.body%>
    </p>

  </div>
  <br/>
  <%end%>
</div>