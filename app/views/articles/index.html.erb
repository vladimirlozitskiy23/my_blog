<h1>Articles:</h1>

<%= search_form_for  @q  do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title_or_body_cont_any %>
  <%= f.submit %>
<% end %>

<% @articles.each do |article|%>
<p>
    <%= link_to article.title, article_path(article) %> 
    
</p>

<p>
    <%= markdown article.body%>
</p>
<hr/>
<%end%>